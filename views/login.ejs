<%- include("./partials/header") %>

<div class="col-md-12 text-center">
		<h1 class="display-3">
			 Login Here!
		</h1>
</div>
<div class="container">
	<div class="row">
		<div style=" width:30%; margin: 20px auto;">
			<form class="form-signin" action="/login" method="POST">
		        <div class="form-label-group">
				<input type="text" id="inputusername" class="form-control" name="username" placeholder="Username" required autofocus>
				<label for="inputusername">Username</label>
			  </div>

			  <div class="form-label-group">
				<input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
				<label for="inputPassword">Password</label>
			  </div>
			  <div class="form-label-group mb-3">
				  <a href="/forgot" class="btn btn-md btn-primary mr-3">Forgot Password</a>
				  <a style="color: white" onclick="passToggler()" class="btn btn-md btn-danger pl-4">Show Password</a>
			  </div>
			  <button class="btn btn-lg btn-success btn-block" type="submit">Log in</button>
			</form>
		</div>
	</div>
</div>

<%- include("./partials/footer") %>