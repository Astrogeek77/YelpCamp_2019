<%- include("../partials/header") %>
<h1 class="text-center">
	Enter a new Comment to <%= campground.name %>!
</h1>

<div class="container">
	<div class="row">
		<div style=" width:30%; margin: 20px auto;">
			<form action="/campgrounds/<%= campground._id%>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text" required>
				</div>
				<div class="form-group">
					<button class="btn btn-success btn-lg btn-block">Submit</button>
				</div>
				<div class="form-group">
					<a class="btn btn-danger btn-lg btn-block" href="/campgrounds">Back to Camps</a>
				</div>
			</form>
		</div>
	</div>
</div>

	
<%- include("../partials/footer") %>