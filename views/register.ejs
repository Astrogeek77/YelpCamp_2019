<%- include("./partials/header") %>

<div class="col-md-12 text-center">
		<h1 class="display-3">
			 Register Here!
		</h1>
</div>
<div class="container">
	<div class="row">
		<div style=" width:30%; margin: 20px auto;">
			<form class="form-signin" action="/register" method="POST">
				<div class="form-label-group">
				<input type="text" id="inputusername" class="form-control" name="username"    placeholder="Username" required autofocus>
				<label for="inputusername">Username</label>
			  </div>
				 <div class="form-label-group">
				<input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
				<label for="inputPassword">Password</label>
			  </div>
				<div class="form-label-group">
					<input id="firstname" class="form-control" type="text" name="firstname" placeholder="First Name" >
				<label for="inputPassword">Firstname</label>
				</div>
				<div class="form-label-group">
					<input id="lastname" class="form-control" type="text" name="lastname" placeholder="Last Name">
				<label for="inputPassword">Lastname</label>
				</div>
				<div class="form-label-group">
					<input id="avatar" class="form-control" type="text" name="avatar" placeholder="avatar" >
				<label for="avatar">Avatar</label>
				</div>
				<div class="form-label-group">
					<input id="email" class="form-control" name="email" name="email" placeholder="email@example.com">
				<label for="email">E-Mail</label>
				</div>
				<div class="form-label-group">
					<input id="adminCode" class="form-control" type="text" name="adminCode" placeholder="AdminCode" >
				<label for="adminCode">AdminCode</label>
				</div>
				<div class="form-group">
				
				<button class="btn btn-success btn-lg pull-center"><i class="fas fa-user-plus"></i> Register</button>
				</div>
			</form>
			
		</div>
	</div>
</div>

<%- include("./partials/footer") %>

